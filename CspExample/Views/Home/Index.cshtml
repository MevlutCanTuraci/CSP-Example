@using CspExample.Infrastructer.Helper;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="my-2">
    <label>
        <strong>
            Nonce:
        </strong>
        @Html.Nonce()
    </label>
</div>

<div class="d-flex justify-content-center">

    <div class="me-2">
        <button class="btn btn-success" id="btn_nonce">
            There nonce
        </button>
    </div>

    <div>
        <button class="btn btn-danger" id="btn_not_nonce">
            There not nonce
        </button>
    </div>


</div>


@section Scripts
    {
    <script type="text/javascript" nonce="@Html.Nonce()">

        $(document).ready(() => {

            console.log("(btn_nonce) Page is ready");

            $("#btn_nonce").click(() => {
                alert("(btn_nonce) Clicked me!");
            });

        });

    </script>


    <script type="text/javascript">

        $(document).ready(() => {

            console.log("(btn_not_nonce) Page is ready");

            $("#btn_not_nonce").click(() => {
                alert("(btn_not_nonce) Clicked me!");
            });

        });

    </script>
}